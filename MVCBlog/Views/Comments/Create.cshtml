@model MVCBlog.Models.Comment

@{
    ViewBag.Title = "Коментари";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Коментар", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, 10, 60, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>
                

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Запиши" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<p>
    @{var j = Request.QueryString["p"];}
    @Html.ActionLink("Към статията", "Details", "Posts", new { id = j }, null)
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
